# EditorConfig for Zephyr Meta Projects
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ files (Zephyr style: tabs)
[*.{c,h,cpp,hpp}]
indent_style = tab
indent_size = 8
tab_width = 8

# CMake
[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 4

# Kconfig
[*.conf]
indent_style = space
indent_size = 4

# Device Tree
[*.{dts,dtsi,overlay}]
indent_style = tab
indent_size = 8
